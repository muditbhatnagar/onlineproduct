<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
         <th colspan="4"></th>
        <td><%= category.desc %></td>
        <td><%= link_to 'Show', category, class:"btn btn-success" %></td>
        <% if current_user.admin %>
          <td><%= link_to 'Edit', edit_category_path(category), class:"btn btn-success" %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin %>
  <%= link_to 'New Category', new_category_path, class:"btn btn-info" %><br>
<% end %>
<td> <%=link_to 'Back', products_path, class:"btn btn-success" %> </td>

